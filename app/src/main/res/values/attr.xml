<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="position">
        <enum name="left_top" value="1"/>
        <enum name="left_bottom" value="2"/>
        <enum name="right_top" value="3"/>
        <enum name="right_bottom" value="4"/>
        <enum name="right_center" value="5" />
    </attr>
    <attr name="distanceBetweenView" format="dimension" />
    <attr name="radius" format="dimension"/>
    <declare-styleable name="ArcMenu">
        <attr name="position"/>
        <attr name="radius"/>
    </declare-styleable>
    <declare-styleable name="PopupMenu">
        <attr name="distanceBetweenView" />
    </declare-styleable>

    <!-- 圆形图片 -->
    <declare-styleable name="RoundedImageView">
        <attr name="type" format="enum">
            <enum name="circle" value="1" />
            <enum name="corner" value="2" />
        </attr>
        <attr name="radius"/>
    </declare-styleable>
</resources>