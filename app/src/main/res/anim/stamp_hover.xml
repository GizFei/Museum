<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <set android:duration="0">
        <scale
            android:pivotX="50%"
            android:pivotY="50%"
            android:fromXScale="200%"
            android:toXScale="100%"
            android:fromYScale="200%"
            android:toYScale="100%" />

        <rotate
            android:fromDegrees="50"
            android:toDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%" />

        <alpha
            android:fromAlpha="0.4"
            android:toAlpha="1" />
    </set>
    <set android:duration="0">
        <scale
            android:pivotX="50%"
            android:pivotY="50%"
            android:fromXScale="100%"
            android:toXScale="50%"
            android:fromYScale="100%"
            android:toYScale="50%" />

        <rotate
            android:fromDegrees="0"
            android:toDegrees="-20"
            android:pivotX="50%"
            android:pivotY="50%" />
    </set>

    <set android:repeatMode="reverse">
        <scale
            android:duration="1000"
            android:repeatMode="restart"
            android:repeatCount="infinite"
            android:pivotX="50%"
            android:pivotY="50%"
            android:fromXScale="100%"
            android:toXScale="80%"
            android:fromYScale="100%"
            android:toYScale="80%" />
    </set>

</set>