<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/drawer_menu_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="所有博物馆"
            android:textColor="@color/colorPrimary"
            android:paddingTop="@dimen/normal"
            android:paddingBottom="@dimen/normal"
            android:paddingStart="@dimen/huge"
            android:paddingEnd="0dp"
            android:background="@drawable/drawer_menu_bg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:textColor="#A6B6C6"
            android:paddingTop="@dimen/normal"
            android:paddingBottom="@dimen/normal"
            android:paddingStart="@dimen/huge"
            android:paddingEnd="0dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的记录"
            android:textColor="#A6B6C6"
            android:paddingTop="@dimen/normal"
            android:paddingBottom="@dimen/normal"
            android:paddingStart="@dimen/huge"
            android:paddingEnd="0dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关于Museum"
            android:textColor="#A6B6C6"
            android:paddingTop="@dimen/normal"
            android:paddingBottom="@dimen/normal"
            android:paddingStart="@dimen/huge"
            android:paddingEnd="0dp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>