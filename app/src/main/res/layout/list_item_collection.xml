<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/star_museum_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/image_description"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/star_museum_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small"
        android:text="@string/app_name"
        android:textColor="#666"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/star_museum_logo"/>

    <TextView
        android:id="@+id/star_museum_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#666"
        android:layout_marginStart="@dimen/small"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/star_museum_logo"
        app:layout_constraintTop_toBottomOf="@id/star_museum_name"/>

    <TextView
        android:id="@+id/star_museum_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#666"
        android:textSize="14sp"
        android:layout_marginStart="@dimen/small"
        app:layout_constraintStart_toEndOf="@id/star_museum_logo"
        app:layout_constraintTop_toBottomOf="@id/star_museum_address"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>