<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:paddingTop="@dimen/tiny"
    android:foreground="@drawable/ripple_effect_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/star_museum_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/image_description"
        android:src="@drawable/skeleton_image"
        android:layout_marginStart="@dimen/small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/small"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/tiny"
        android:layout_marginBottom="@dimen/tiny"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/star_museum_logo"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/star_museum_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="博物馆名"
            android:textColor="#666"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/star_museum_address"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="地址"
            android:textColor="#666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/star_museum_date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="clip_vertical"
            android:text="日期"
            android:textColor="#666"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/small"
        android:layout_marginEnd="@dimen/small"
        android:background="@color/dark_gray"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>