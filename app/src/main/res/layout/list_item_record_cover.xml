<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="236dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/small">

    <ImageView
        android:id="@+id/record_cover_img"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:contentDescription="@string/image_description"
        android:scaleType="centerCrop"
        android:src="@drawable/skeleton_image"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/record_cover_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingStart="@dimen/small"
        android:paddingEnd="0dp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:text="博物馆名称"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/record_cover_img"/>

    <TextView
        android:id="@+id/record_cover_num"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingStart="@dimen/small"
        android:paddingEnd="0dp"
        android:gravity="top"
        android:textSize="12sp"
        android:text="5条记录"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/record_cover_title"/>

</android.support.constraint.ConstraintLayout>