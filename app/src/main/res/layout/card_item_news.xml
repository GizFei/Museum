<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/detail_news"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/pSmall"
    android:paddingBottom="@dimen/normalize_padding">

    <ImageView
        android:id="@+id/pic_news"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image_description"
        android:src="@drawable/activity_eg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/title_news"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mSmall"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="博物馆革命传统教育课程——坦克新知（九月活动）"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pic_news"/>
    <TextView
        android:id="@+id/url_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://www.zhejiangmuseum.com/zjbwg/education/news_hd02.html?id=837"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/date_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mSmall"
        android:text="2018-09-08"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/pic_news"
        app:layout_constraintTop_toBottomOf="@id/title_news"
        app:layout_constraintBottom_toBottomOf="@id/divider"/>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginStart="@dimen/normalize_margin"
        android:layout_marginEnd="@dimen/normalize_margin"
        android:layout_marginTop="@dimen/normalize_margin"
        app:layout_constraintTop_toBottomOf="@id/date_news"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>