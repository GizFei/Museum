<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbarDefaultDelayBeforeFade="200"
    android:scrollbarSize="2dp">

    <android.support.constraint.ConstraintLayout
        android:overScrollMode="always"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ripple_effect_light_gray">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/ans_detail_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small"
            android:transitionName="@string/cl_trans"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.giz.customize.RoundedImageView
                android:id="@+id/ans_detail_logo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="@dimen/small"
                android:contentDescription="@string/image_description"
                android:src="@drawable/skeleton_image"
                app:type="circle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/ans_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="博物馆名称"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/small"
                app:layout_constraintTop_toTopOf="@id/ans_detail_logo"
                app:layout_constraintBottom_toBottomOf="@id/ans_detail_logo"
                app:layout_constraintStart_toEndOf="@id/ans_detail_logo"/>

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:id="@+id/ans_detail_collect"
                android:layout_width="58dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_chip"
                android:text="收藏"
                android:textSize="12sp"
                android:textColor="#222"
                android:paddingStart="@dimen/small"
                android:paddingEnd="@dimen/small"
                android:paddingTop="@dimen/tiny"
                android:paddingBottom="@dimen/tiny"
                android:drawablePadding="@dimen/tiny"
                android:drawableStart="@drawable/index_ic_collect"
                android:layout_marginEnd="@dimen/small"
                android:gravity="center_vertical"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintTop_toTopOf="@id/ans_detail_name"
                app:layout_constraintBottom_toBottomOf="@id/ans_detail_name"
                app:layout_constraintStart_toEndOf="@id/ans_detail_name"
                app:layout_constraintEnd_toStartOf="@id/ans_detail_share"/>

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:id="@+id/ans_detail_share"
                android:layout_width="58dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_chip"
                android:text="分享"
                android:textSize="12sp"
                android:textColor="#222"
                android:paddingStart="@dimen/small"
                android:paddingEnd="@dimen/small"
                android:paddingTop="@dimen/tiny"
                android:paddingBottom="@dimen/tiny"
                android:drawablePadding="@dimen/tiny"
                android:drawableStart="@drawable/index_ic_share"
                android:layout_marginEnd="@dimen/small"
                android:gravity="center_vertical"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintTop_toTopOf="@id/ans_detail_name"
                app:layout_constraintBottom_toBottomOf="@id/ans_detail_name"
                app:layout_constraintStart_toEndOf="@id/ans_detail_name"
                app:layout_constraintEnd_toEndOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/ans_detail_image"
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/small"
            android:transitionName="@string/image_trans"
            android:contentDescription="@string/image_description"
            android:src="@drawable/skeleton_image"
            app:layout_constraintTop_toBottomOf="@id/ans_detail_header"/>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ans_detail_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/small"
            android:orientation="vertical"
            android:foreground="@drawable/ripple_effect_gray"
            android:layout_marginTop="@dimen/tiny"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ans_detail_image"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/ans_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/small"
                android:paddingEnd="@dimen/small"
                android:drawableStart="@drawable/ic_whatshot"
                android:paddingTop="@dimen/tiny"
                android:paddingBottom="@dimen/tiny"
                android:textSize="16sp"
                android:drawablePadding="@dimen/small"
                android:gravity="center_vertical"
                android:text="活动/展览名称"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/ans_detail_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/small"
                android:paddingEnd="@dimen/small"
                android:drawableStart="@drawable/info_ic_opentime"
                android:paddingTop="@dimen/tiny"
                android:paddingBottom="@dimen/tiny"
                android:textSize="12sp"
                android:drawablePadding="@dimen/small"
                android:gravity="center_vertical"
                android:text="时间：2018-10-16"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/ans_detail_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/small"
                android:paddingEnd="@dimen/small"
                android:paddingTop="@dimen/tiny"
                android:paddingBottom="@dimen/tiny"
                android:lineSpacingExtra="@dimen/tiny"
                android:drawablePadding="@dimen/small"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/info_ic_address"
                android:text="地址：杭州南宋官窑博物馆"
                android:textSize="12sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/ans_detail_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/small"
                android:paddingEnd="@dimen/small"
                android:paddingTop="@dimen/tiny"
                android:paddingBottom="@dimen/tiny"
                android:drawablePadding="@dimen/small"
                android:lineSpacingExtra="@dimen/tiny"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_short_text"
                android:text="摘要：位于杭州玉皇山以南乌龟山西麓，地处西湖风景区南缘，是中国第一座依托古窑址建立的陶瓷专题博物馆。著名的郊坛下南宋官窑遗址就坐落在馆区之中。杭州南宋官窑博物馆位于杭州玉皇山以南乌龟山西麓，地处西湖风景区南缘，是中国第一座依托古窑址建立的陶瓷专题博物馆。著名的郊坛下南宋官窑遗址就坐落在馆区之中。杭州南宋官窑博物馆位于杭州玉皇山以南乌龟山西麓，地处西湖风景区南缘，是中国第一座依托古窑址建立的陶瓷专题博物馆。著名的郊坛下南宋官窑遗址就坐落在馆区之中。"
                android:textSize="12sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/ans_detail_organize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/small"
                android:paddingEnd="@dimen/small"
                android:paddingTop="@dimen/tiny"
                android:paddingBottom="@dimen/tiny"
                android:drawablePadding="@dimen/small"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ans_ic_organize"
                android:text="主办方：xxx"
                android:textSize="12sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/ans_detail_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/small"
                android:paddingEnd="@dimen/small"
                android:paddingTop="@dimen/tiny"
                android:paddingBottom="@dimen/tiny"
                android:drawablePadding="@dimen/small"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ans_ic_people"
                android:text="面向人群：xxx"
                android:textSize="12sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/ans_detail_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/small"
                android:paddingEnd="@dimen/small"
                android:paddingTop="@dimen/tiny"
                android:paddingBottom="@dimen/tiny"
                android:layout_marginTop="@dimen/small"
                android:drawablePadding="@dimen/small"
                android:gravity="center_vertical|end"
                android:text="点击查看详情    >>"
                android:textSize="10sp"
                android:textColor="@android:color/holo_blue_light"/>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</ScrollView>